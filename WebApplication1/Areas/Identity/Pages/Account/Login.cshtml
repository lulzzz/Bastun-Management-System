@page
@model LoginModel

<h3 class="text-center">Login</h3>
<br />
<div class="row justify-content-center">
    <div class="col-md-4">
            <form asp-area="Identity" asp-page="/Account/Login" >
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <input asp-for="Input.UserName" class="form-control" placeholder="Username"/>
                    <span asp-validation-for="Input.UserName"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.Password" class="form-control" placeholder="Password"/>
                    <span asp-validation-for="Input.Password"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Password confirmation"/>
                    <span asp-validation-for="Input.Password"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary w-100">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
